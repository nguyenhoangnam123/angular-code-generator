{
  "$schema": "http://json-schema.org/schema",
  "id": "componentSchema",
  "title": "Creates a basic value object.",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the component.",
      "visible": false
    },
    "name": {
      "description": "Specifies the name of component.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "action": {
      "description": "Specifies the action to create component.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    },
    "flat": {
      "type": "boolean",
      "description": "Flag to indicate if a dir is created.",
      "default": false
    },
    "obj": {
      "description": "Object string for the value object. (in JSON.stringify format)",
      "type": "string",
      "default": "{\"id\":\"number\", \"title\":\"string\"}"
    },
    "spec": {
      "type": "boolean",
      "description": "Specifies if a spec file is generated.",
      "default": true
    }
  },
  "required": ["name"]
}
